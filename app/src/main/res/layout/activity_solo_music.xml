<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:background="@drawable/image" />

    <TextView
        android:id="@+id/musicName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/musicArtist"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="41dp"
        android:text="Music Name" />

    <TextView
        android:id="@+id/musicArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/musicName"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="Music Artist" />


    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/play_button"
        android:layout_marginBottom="28dp" />

    <ImageView
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/next_button"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_play_arrow_black_24dp"
        android:text="Play" />

    <ImageView
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="56dp"
        android:layout_toEndOf="@+id/musicArtist"
        android:background="@drawable/ic_skip_next_black_24dp"
        android:text="Next" />

    <ImageView
        android:id="@+id/prev_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/play_button"
        android:layout_marginEnd="73dp"
        android:layout_toStartOf="@+id/play_button"
        android:background="@drawable/ic_skip_previous_black_24dp"
        android:text="Previous" />

    <ImageView
        android:id="@+id/repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/prev_button"
        android:layout_alignTop="@+id/mute"
        android:background="@drawable/ic_repeat_black_24dp" />

    <ImageView
        android:id="@+id/mute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView"
        android:layout_below="@+id/musicName"
        android:layout_marginTop="45dp"
        android:background="@drawable/ic_volume_up_black_24dp" />


</RelativeLayout>